<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Activity.RegistrazioneActivity">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:elevation="8sp"
        android:orientation="horizontal"
        tools:targetApi="lollipop">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="60sp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:backgroundTint="@color/white"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_margin="@dimen/MarginLeftRight">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="REGISTRAZIONE"
                android:fontFamily="@font/bungee"
                app:autoSizeTextType="uniform"
                android:textSize="@dimen/Titolo"
                android:textColor="@color/nero" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome:"
                android:textSize="@dimen/Text"
                app:autoSizeTextType="uniform"
                android:fontFamily="@font/baloo"
                android:textColor="@color/turchese"
                android:layout_marginTop="@dimen/MarginBetween"/>

            <EditText
                android:id="@+id/textNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:textSize="@dimen/Text"
                app:autoSizeTextType="uniform"
                android:inputType="textPersonName"
                android:textColor="@color/nero_200"
                android:hint="Inserisci nome..." />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cognome:"
                android:textSize="@dimen/Text"
                app:autoSizeTextType="uniform"
                android:fontFamily="@font/baloo"
                android:textColor="@color/turchese"
                android:layout_marginTop="@dimen/MarginBetween"/>

            <EditText
                android:id="@+id/textCognome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:inputType="textPersonName"
                android:textSize="@dimen/Text"
                app:autoSizeTextType="uniform"
                android:textColor="@color/nero_200"
                android:hint="Inserisci cognome..." />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data Nascita:"
                android:textSize="@dimen/Text"
                app:autoSizeTextType="uniform"
                android:fontFamily="@font/baloo"
                android:textColor="@color/turchese"
                android:layout_marginTop="@dimen/MarginBetween"/>

            <EditText
                android:id="@+id/textData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:textSize="@dimen/Text"
                app:autoSizeTextType="uniform"
                android:clickable="true"
                android:focusable="false"
                android:inputType="date"
                android:textColor="@color/nero_200"
                android:hint="Inserisci data nascita..." />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:textSize="@dimen/Text"
                app:autoSizeTextType="uniform"
                android:fontFamily="@font/baloo"
                android:textColor="@color/turchese"
                android:layout_marginTop="@dimen/MarginBetween"/>

            <EditText
                android:id="@+id/textEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:inputType="textEmailAddress"
                android:textSize="@dimen/Text"
                app:autoSizeTextType="uniform"
                android:textColor="@color/nero_200"
                android:hint="Inserisci email..." />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email Paypal:"
                android:textSize="@dimen/Text"
                app:autoSizeTextType="uniform"
                android:fontFamily="@font/baloo"
                android:textColor="@color/turchese"
                android:layout_marginTop="@dimen/MarginBetween"/>

            <EditText
                android:id="@+id/textEmailPagamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:inputType="textEmailAddress"
                android:textSize="@dimen/Text"
                app:autoSizeTextType="uniform"
                android:textColor="@color/nero_200"
                android:hint="Inserisci email paypal..." />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password:"
                android:textSize="@dimen/Text"
                app:autoSizeTextType="uniform"
                android:fontFamily="@font/baloo"
                android:textColor="@color/turchese"
                android:layout_marginTop="@dimen/MarginBetween"/>

            <EditText
                android:id="@+id/textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:textSize="@dimen/Text"
                app:autoSizeTextType="uniform"
                android:inputType="textPassword"
                android:textColor="@color/nero_200"
                android:hint="Inserisci password..." />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Conferma Password:"
                android:textSize="@dimen/Text"
                app:autoSizeTextType="uniform"
                android:fontFamily="@font/baloo"
                android:textColor="@color/turchese"
                android:layout_marginTop="@dimen/MarginBetween"/>

            <EditText
                android:id="@+id/textConfPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:textSize="@dimen/Text"
                app:autoSizeTextType="uniform"
                android:inputType="textPassword"
                android:textColor="@color/nero_200"
                android:hint="Ripeti password..." />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRegistrati"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registrati"
                android:layout_marginTop="@dimen/MarginLeftRight"
                android:layout_marginBottom="@dimen/MarginLeftRight"
                android:fontFamily="@font/baloo"
                android:textSize="@dimen/Text"
                app:autoSizeTextType="uniform"
                app:cornerRadius="@dimen/radiusButton"
                android:padding="@dimen/paddingButton"
                app:backgroundTint="@color/turchese"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>