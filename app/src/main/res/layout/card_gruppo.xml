<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10sp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="20sp"
    tools:targetApi="lollipop">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgCard"
            android:layout_height="140sp"
            android:layout_width="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/marvel_unlimited_image" />

        <TextView
            android:id="@+id/textNomeUtenteCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome Utente"

            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeMaxTextSize="25sp"
            app:autoSizeStepGranularity="2sp"

            android:background="@drawable/card_nome_utente_draw"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:singleLine="true"
            android:layout_below="@+id/imgCard"
            android:layout_marginTop="-15sp"
            android:gravity="center_horizontal"
            android:layout_marginLeft="15sp"
            android:layout_marginStart="15sp"
            android:textColor="@color/nero"
            android:fontFamily="@font/baloo"
            tools:targetApi="o" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textNomeUtenteCard"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="20sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textNomeServizioCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:fontFamily="@font/bungee"
                android:text="Nome Servizio"
                android:textColor="@color/nero"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="1sp"
                android:autoSizeMaxTextSize="@dimen/Text"
                android:autoSizeStepGranularity="1sp"
                tools:targetApi="o" />

            <TextView
                android:id="@+id/textCostoCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Costo Servizio"
                android:textColor="@color/nero_200"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="1sp"
                android:autoSizeMaxTextSize="18sp"
                android:autoSizeStepGranularity="1sp"
                tools:targetApi="o"
                android:layout_marginTop="5sp" />

            <TextView
                android:id="@+id/textNumPostiCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Numero Posti"
                android:textColor="@color/nero_200"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="1sp"
                android:autoSizeMaxTextSize="18sp"
                android:autoSizeStepGranularity="1sp"
                tools:targetApi="o" />

        </LinearLayout>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>