<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardElevation="5sp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="20sp"
    android:clickable="true"
    tools:targetApi="lollipop"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgCard"
            android:layout_height="100sp"
            android:layout_width="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/marvel_unlimited_image" />

        <TextView
            android:id="@+id/textNomeUtenteCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome Utente"
            android:textSize="15sp"
            app:autoSizeTextType="uniform"
            android:background="@drawable/card_nome_utente_draw"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:singleLine="true"
            android:layout_below="@+id/imgCard"
            android:layout_marginTop="-15sp"
            android:gravity="center_horizontal"
            android:layout_marginLeft="15sp"
            android:layout_marginStart="15sp"
            android:textColor="@color/nero"
            android:fontFamily="@font/baloo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textNomeUtenteCard"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="20sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textNomeServizioCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bungee"
                android:text="Nome Servizio"
                android:textColor="@color/nero"
                app:autoSizeTextType="uniform" />

            <TextView
                android:id="@+id/textCostoCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Costo Servizio"
                android:textColor="@color/nero_200"
                app:autoSizeTextType="uniform" />

            <TextView
                android:id="@+id/textNumPostiCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Numero Posti"
                android:textColor="@color/nero_200"
                app:autoSizeTextType="uniform" />
        </LinearLayout>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>