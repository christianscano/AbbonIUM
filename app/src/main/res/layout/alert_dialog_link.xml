<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardElevation="8sp"
    app:cardCornerRadius="20sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/testo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo"
            android:textSize="25sp"
            android:text="Invita i tuoi amici"
            android:textColor="@color/turchese"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginTop="40sp"
            android:layout_marginLeft="16sp"
            android:layout_marginBottom="@dimen/MarginBetween"
            android:layout_marginRight="16sp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/boxLink"
                android:layout_marginLeft="16sp"
                android:layout_marginRight="16sp"
                android:layout_below="@+id/testo"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textLink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:fontFamily="@font/baloo"
                    android:padding="10sp"
                    android:textSize="@dimen/Text"
                    android:textColor="@color/nero_200"
                    android:clickable="false"
                    android:focusable="false"
                    android:text="link"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCopia"
                android:layout_below="@+id/boxLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/MarginBetween"
                android:layout_marginBottom="16sp"
                android:layout_marginRight="16sp"
                android:padding="@dimen/paddingButton"
                app:backgroundTint="@color/turchese"
                android:textSize="@dimen/Text"
                app:cornerRadius="@dimen/radiusButton"
                android:text="Copia"
                android:layout_alignParentRight="true" />

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>